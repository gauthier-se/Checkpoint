<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.seyzeriat.desktop.controller.ImportGamesController"
      styleClass="import-view">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <!-- Header -->
    <Label text="Importer des jeux" styleClass="view-title"/>

    <!-- Search bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher un jeu (ex: Zelda, Final Fantasy...)"
                   HBox.hgrow="ALWAYS"/>
        <Button fx:id="searchButton" text="Rechercher" onAction="#onSearch" styleClass="search-button"/>
        <ProgressIndicator fx:id="searchProgress" prefWidth="24" prefHeight="24"/>
    </HBox>

    <!-- Status -->
    <Label fx:id="statusLabel" styleClass="status-label"/>

    <!-- Results -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS"
                styleClass="results-scroll">
        <FlowPane fx:id="resultsPane" hgap="15" vgap="15" alignment="TOP_LEFT"
                  styleClass="results-pane">
            <padding>
                <Insets bottom="10" left="5" right="5" top="10"/>
            </padding>
        </FlowPane>
    </ScrollPane>
</VBox>
