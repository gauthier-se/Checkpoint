<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.seyzeriat.desktop.controller.LoginController"
      styleClass="login-view" prefWidth="400" prefHeight="500">
    <padding>
        <Insets bottom="40" left="60" right="60" top="40"/>
    </padding>

    <!-- App title -->
    <Label text="Checkpoint" styleClass="login-app-title"/>
    <Label text="Administration" styleClass="login-subtitle"/>

    <!-- Spacer -->
    <Region prefHeight="20"/>

    <!-- Email -->
    <VBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Email" styleClass="login-field-label"/>
        <TextField fx:id="emailField" promptText="admin@example.com" styleClass="login-text-field"/>
    </VBox>

    <!-- Password -->
    <VBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Mot de passe" styleClass="login-field-label"/>
        <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="login-text-field"/>
    </VBox>

    <!-- Error message -->
    <Label fx:id="errorLabel" styleClass="login-error" wrapText="true" maxWidth="280"/>

    <!-- Login button + spinner -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="loginButton" text="Se connecter" onAction="#onLogin" styleClass="login-button"/>
        <ProgressIndicator fx:id="loginProgress" prefWidth="24" prefHeight="24" visible="false"/>
    </HBox>
</VBox>
